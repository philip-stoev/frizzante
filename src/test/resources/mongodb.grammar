main:
	mongo_insert
;

mongo_insert:
	DBCollection coll = db.getCollection(collection_name);
	BasicDBObject obj = basic_object;
	coll.insert(obj);
;

collection_name:
	"collection1" |
	"collection2"
;

basic_object:
	new BasicDBObject(object_parameters).append_list
;

append_list:
	|
	append_item |
	append_list.append_item
;

append_item:
	append(object_parameters)
;

object_parameters:
	name, value
;

name:
	"string"
;

value:40% "string" |40% integer |20% basic_object
;

string:
	ABC |
	XYZ
;

integer:
	1 |
	2
;
